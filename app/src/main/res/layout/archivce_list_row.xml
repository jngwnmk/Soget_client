<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/list_archive_image_size_w"
        android:layout_height="@dimen/list_archive_image_size_h"
        android:id="@+id/get_thumbnail"
        android:src="@drawable/archive_thumbnail"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tag_list"
                android:text="tag"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/archive_clip"
                android:drawablePadding="5.33dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lock_unlock_img"
                android:src="@drawable/archive_unlocked"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/title"
            android:textColor="@color/black"
            android:text="세발자전거에 실은 중국의 삶을 내려보다. Thist is test. This is test"
            android:textSize="13.67sp"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/get_nums"
                android:textSize="11.33sp"
                android:textColor="@color/blur_grey"
                android:text="00 MarkIn's"/>
            <TextView
                android:layout_marginLeft="13.33dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment_nums"
                android:textSize="11.33sp"
                android:textColor="@color/blur_grey"
                android:text="00 Comments"/>

            </LinearLayout>

    </LinearLayout>

</LinearLayout>