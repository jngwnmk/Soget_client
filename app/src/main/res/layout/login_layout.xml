<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:orientation="vertical"
android:gravity="center_horizontal">

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/register_edit_text_selector"
    android:id="@+id/user_id_edit"
    android:hint="@string/login_id_hint"
    android:paddingLeft="13.33dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"
    android:layout_marginTop="73dp"
    android:singleLine="true"
    android:textColor="@color/register_edit_color_selector"
    />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:hint="@string/login_pwd_hint"
    android:background="@drawable/register_edit_text_selector"
    android:id="@+id/user_pwd_edit"
    android:paddingLeft="13.33dp"
    android:paddingTop="18dp"
    android:paddingBottom="18dp"

    android:layout_marginTop="5.67dp"
    android:textColor="@color/register_edit_color_selector"

    android:singleLine="true"
    />

<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/login_btn"
    android:background="@drawable/login_btn"
    android:layout_marginTop="35dp"
    />
<TextView
    android:id="@+id/pwd_forget_tv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:textColor="@color/black"
    android:text="@string/login_forget_pwd"
    android:layout_gravity="bottom"
    android:gravity="center_horizontal|bottom"
    android:layout_marginBottom="50dp" />

</LinearLayout>
