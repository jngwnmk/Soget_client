<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/friend_search_box"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/friend_search_icon"/>
        <EditText
            android:layout_marginLeft="5dp"
            android:id="@+id/friend_search_et"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginRight="5dp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            />
        <ImageButton
            android:id="@+id/friend_search_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/friend_search_cancle_icon"
            android:background="@color/transparent"
            android:paddingRight="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friend_search_close_btn"
            android:textColor="@color/main_color"
            android:text="@string/search_cancel_btn"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/friend_search_list"
        android:divider="@color/blur_grey"
        android:dividerHeight="1dp"
        android:background="@color/blur_grey"></ListView>
</LinearLayout>
