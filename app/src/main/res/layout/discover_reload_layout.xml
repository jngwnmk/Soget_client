<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/reload_layout"
        android:padding="40dp">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/reload_progress"
            android:indeterminateDrawable="@drawable/discover_progress_interminate"
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:visibility="gone"></ProgressBar>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reload_img"
            android:src="@drawable/reload_icon"
            android:visibility="visible"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/show_more"
        android:layout_marginTop="12dp"
        android:textSize="11.59sp"/>
    </LinearLayout>
</LinearLayout>
