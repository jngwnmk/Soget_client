<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/popup_hint"
            android:paddingRight="@dimen/popup_right_padding"
            android:paddingLeft="@dimen/popup_left_padding"
            android:textColorHint="@color/light_text_color"
            android:textSize="@dimen/popup_comment_size"
            android:gravity="top"
            android:id="@+id/comment_et"
            android:background="@color/transparent"
            android:textCursorDrawable="@drawable/color_cursor"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="20.7dp"
        android:paddingRight="21dp"
        android:id="@+id/category_selector"
        android:layout_weight="0.75">

        <TextView
            android:id="@+id/category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            android:text="Listening"
            android:layout_weight="1"
            android:layout_gravity="left|center_vertical" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_icon"
            android:layout_gravity="center_vertical|right" />

    </FrameLayout>
</LinearLayout>